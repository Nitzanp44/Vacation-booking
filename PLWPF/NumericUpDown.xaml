<UserControl x:Class="PLWPF.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF"
             mc:Ignorable="d" VerticalAlignment="Bottom" Width="75" Height="25">

    <Grid  Margin="0,0,0,0">
        <Button x:Name="cmdDown" Content="-" Click="cmdDown_Click" Margin="50,0,0,0" Width="25" Height="25"/>
        <Label x:Name="txtNum" HorizontalAlignment="Right" VerticalAlignment="Top"  Width="25" Content="0" FontSize="12" BorderBrush="#FF080707" Height="25" Margin="0,0,25,0" TextInput="txtNum_TextInput" RenderTransformOrigin="-0.04,0.52"/>
        <Button x:Name="cmdUp"  Content="+" Click="cmdUp_Click" Margin="0,0,49,0" Width="25" Height="25"/>
    </Grid>

</UserControl>
